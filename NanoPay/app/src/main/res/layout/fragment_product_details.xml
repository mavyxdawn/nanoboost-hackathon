<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/backButton"
        style="@android:style/Widget.Material.Button"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginLeft="0sp"
        android:layout_marginTop="15sp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/advent_pro_semibold"
        android:text="&lt;"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/productImageView"
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars[3]"
        android:src ="@drawable/longsleeve" />

    <TextView
        android:id="@+id/productNameTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15sp"
        android:layout_marginBottom="190sp"
        android:text="Nike Dri-FIT Long Sleeve"
        android:textColor="#333"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/productDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginBottom="120sp"
        android:text="Sleek cut plus superb comfort.\nOrder No: 6878394212\nNewWorks(Lazada)"
        android:textColor="#333"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/productPriceTextView"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15sp"
        android:layout_marginBottom="55sp"
        android:text="â‚±999.75"
        android:textColor="#00c368"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buyButton"
        android:layout_width="160dp"
        android:layout_height="50sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15sp"
        android:layout_marginBottom="65sp"
        android:height="60sp"
        android:background="@color/colorPrimary"
        android:onClick="OnButtonClicked"
        android:tag="payButton"
        android:text="Buy" />

    <Button
        android:id="@+id/requestButton"
        android:layout_width="160sp"
        android:layout_height="50sp"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15sp"
        android:layout_marginBottom="65sp"
        android:height="60sp"
        android:background="@color/colorPrimaryNegation"
        android:text="Request a replacement"
        android:visibility="invisible"
        android:tag="rejectButton"/>


    <Button
        android:id="@+id/approveButton"
        android:layout_width="160sp"
        android:layout_height="50sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15sp"
        android:layout_marginBottom="65sp"
        android:height="60sp"
        android:background="@color/colorPrimary"
        android:tag="approveButton"
        android:text="Approve Product"
        android:visibility="invisible" />



</RelativeLayout>